<div align="center">
  <h1>All Jockeys and their horses</h1>

  <% @jockeys.each do |jockey| %>
  <h1><a href="/jockeys/<%= jockey.id %>"><%= jockey.name %></a></h1>
  <% jockey.horses.each do |horse| %>
    <h3><%= horse.name %></h3>
    <p>Age: <%= horse.age %></p>
    <p>Total Winnings: <%= horse.total_winnings %></p>
    <% end %>
  <% end %>

</div>
